<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewsOpenActivity">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="#262d3f"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:src="@drawable/arrow" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="12"
            android:gravity="center"
            android:text="Wine name is here"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:src="@drawable/cart" />


    </LinearLayout>

    <ImageView
        android:id="@+id/blank"
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:layout_below="@+id/topBar"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/newsbackground" />

    <ImageView
        android:id="@+id/buttonCart"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/blank"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="-35dp"
        android:alpha=".8"
        android:elevation="1dp"
        android:src="@drawable/active1" />

    <TextView
        android:id="@+id/cart"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/buttonCart"
        android:layout_alignTop="@+id/buttonCart"
        android:layout_alignEnd="@+id/buttonCart"
        android:layout_alignBottom="@+id/buttonCart"
        android:layout_margin="15dp"
        android:elevation="2dp"
        android:gravity="center"
        android:text="BEST \nPRICE"
        android:textColor="#fff" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/blank"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="-40dp"
        android:alpha=".7"
        android:elevation="1dp"
        android:src="@drawable/active2" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/blank"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="-45dp"
        android:alpha=".5"
        android:elevation="1dp"
        android:src="@drawable/active2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/blank"
        android:layout_alignParentEnd="true"
        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_weight=".2"
            android:text="WINE NAME IS HERE \nTWO IN A ROW"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="10dp"
            android:layout_weight=".1"
            android:alpha=".4"
            android:text="White Wine  / 2010"
            android:textColor="#000"
            android:textSize="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:alpha=".7"
            android:justificationMode="inter_word"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Amet venenatis urna cursus eget nunc scelerisque viverra. Lorem ipsum dolor sit amet consectetur adipiscing elit. Vitae purus faucibus ornare suspendisse sed nisi lacus sed. Suspendisse faucibus interdum posuere lorem."
            android:textColor="#000"
            android:textSize="14dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/bottlePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="40dp"
        android:text="$19.50"
        android:textColor="#000"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/bottlePrice"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/bottlePrice"
        android:alpha=".8"
        android:text="Bottle"
        android:textColor="#000"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/glassPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottlePrice"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginRight="100dp"
        android:text="$2.00"
        android:textColor="#000"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/glassPrice"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/glassPrice"
        android:alpha=".8"
        android:text="Glass"
        android:textColor="#000"
        android:textStyle="italic" />


    <ImageView
        android:id="@+id/circleG"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/circle"
        android:tint="#000" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="23dp"
        android:layout_alignLeft="@id/circleG"
        android:layout_alignBottom="@id/circleG"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/google"
        android:tint="#000" />


    <ImageView
        android:id="@+id/circleT"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@id/circleG"
        android:src="@drawable/circle"
        android:tint="#000" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="23dp"
        android:layout_alignLeft="@id/circleT"
        android:layout_alignBottom="@id/circleT"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/twitter"
        android:tint="#000" />

    <ImageView
        android:id="@+id/circleF"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@id/circleT"
        android:src="@drawable/circle"
        android:tint="#000" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="23dp"
        android:layout_alignLeft="@id/circleF"
        android:layout_alignBottom="@id/circleF"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/facebook"
        android:tint="#000" />


</RelativeLayout>