<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewsOpenActivity">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="#262d3f"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:src="@drawable/arrow" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="40dp"
            android:layout_weight="12"
            android:gravity="center"
            android:text="Salad"
            android:textColor="#fff"
            android:textSize="18dp" />


    </LinearLayout>

    <ImageView
        android:id="@+id/blank"
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:layout_below="@+id/topBar"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/newsbackground" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/cart"
        android:background="@drawable/gradient2"
        android:gravity="center_vertical"
        android:text="\t\t\tSpinach Sweet Crisp Salad"
        android:textColor="#fff"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/buttonCart"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/blank"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="-35dp"
        android:alpha=".8"
        android:elevation="1dp"
        android:src="@drawable/active1" />

    <TextView
        android:id="@+id/cart"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/buttonCart"
        android:layout_alignTop="@+id/buttonCart"
        android:layout_alignEnd="@+id/buttonCart"
        android:layout_alignBottom="@+id/buttonCart"
        android:layout_margin="10dp"
        android:elevation="2dp"
        android:gravity="center"
        android:text="$ 10.00"
        android:textColor="#fff"
        android:textSize="18dp" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/blank"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="-40dp"
        android:alpha=".7"
        android:elevation="1dp"
        android:src="@drawable/active2" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/blank"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="-45dp"
        android:alpha=".5"
        android:elevation="1dp"
        android:src="@drawable/active2" />

    <ImageView
        android:id="@+id/blank1"
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:layout_below="@+id/blank"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:elevation="-1dp"
        android:scaleType="fitXY"
        android:src="@drawable/newsbackground" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/cart1"
        android:background="@drawable/gradient2"
        android:gravity="center_vertical"
        android:text="\t\t\tThe Trio - Soup &amp; Salad"
        android:textColor="#fff"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/buttonCart1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/blank1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="-35dp"
        android:alpha=".8"
        android:elevation="1dp"
        android:src="@drawable/active1" />

    <TextView
        android:id="@+id/cart1"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/buttonCart1"
        android:layout_alignTop="@+id/buttonCart1"
        android:layout_alignEnd="@+id/buttonCart1"
        android:layout_alignBottom="@+id/buttonCart1"
        android:layout_margin="10dp"
        android:elevation="2dp"
        android:gravity="center"
        android:text="$ 12.50"
        android:textColor="#fff"
        android:textSize="18dp" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/blank1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="-40dp"
        android:alpha=".7"
        android:elevation="1dp"
        android:src="@drawable/active2" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/blank1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="-45dp"
        android:alpha=".5"
        android:elevation="1dp"
        android:src="@drawable/active2" />

    <ImageView
        android:id="@+id/blank2"
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:layout_below="@+id/blank1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:elevation="-1dp"
        android:scaleType="fitXY"
        android:src="@drawable/newsbackground" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/cart2"
        android:background="@drawable/gradient2"
        android:gravity="center_vertical"
        android:text="\t\t\tChopped Salad"
        android:textColor="#fff"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/buttonCart2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/blank2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="-35dp"
        android:alpha=".8"
        android:elevation="1dp"
        android:src="@drawable/active1" />

    <TextView
        android:id="@+id/cart2"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/buttonCart2"
        android:layout_alignTop="@+id/buttonCart2"
        android:layout_alignEnd="@+id/buttonCart2"
        android:layout_alignBottom="@+id/buttonCart2"
        android:layout_margin="10dp"
        android:elevation="2dp"
        android:gravity="center"
        android:text="$ 8.50"
        android:textColor="#fff"
        android:textSize="18dp" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/blank2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="-40dp"
        android:alpha=".7"
        android:elevation="1dp"
        android:src="@drawable/active2" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/blank2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="-45dp"
        android:alpha=".5"
        android:elevation="1dp"
        android:src="@drawable/active2" />

</RelativeLayout>