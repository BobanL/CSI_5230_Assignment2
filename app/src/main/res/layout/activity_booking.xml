            android:layout_marginTop="0dp"
            android:fontFamily="sans-serif-light"
            android:maxLines="2"
            android:text="Lorem ipsum dolor sit amte,"
            android:textSize="16dp"
            android:textColor="#fff"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cafeLabelAddress" />
        <TextView
            android:id="@+id/cafeAddress2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="0dp"
            android:fontFamily="sans-serif-light"
            android:maxLines="2"
            android:text="consectetur"
            android:textSize="16dp"
            android:textColor="#fff"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cafeAddress1" />
        <TextView
            android:id="@+id/cafePhoneLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="40dp"
            android:text="Phone:  "
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#fff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cafeAddress2"/>

        <TextView
            android:id="@+id/cafePhoneNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="+44 12 3456 789"
            android:textColor="#fff"
            android:textSize="16dp"
            android:textStyle="italic"
            app:layout_constraintLeft_toRightOf="@id/cafePhoneLabel"
