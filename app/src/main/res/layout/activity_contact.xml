<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#282e41"
    android:orientation="vertical"
    tools:context=".BookingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#262d3f"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:src="@drawable/arrow" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="40dp"
            android:layout_weight="12"
            android:gravity="center"
            android:text="Contact"
            android:textSize="18dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <ImageView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:src="#dddddd" />

        <ImageView
            android:id="@+id/orangeBorder"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_alignBottom="@id/mapView"
            android:layout_marginBottom="-5dp"
            android:src="#f0a64d" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignRight="@+id/orangeBorder"
            android:layout_alignBottom="@+id/orangeBorder"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="-28dp"
            android:src="@drawable/active1" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/info"
            android:layout_alignRight="@+id/orangeBorder"
            android:layout_alignBottom="@+id/orangeBorder"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="-10dp"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignRight="@+id/orangeBorder"
            android:layout_alignBottom="@+id/orangeBorder"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="-33dp"
            android:alpha=".75"
            android:src="@drawable/active2" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignRight="@+id/orangeBorder"
            android:layout_alignBottom="@+id/orangeBorder"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="-38dp"
            android:alpha=".5"
            android:src="@drawable/active3" />

        <TextView
            android:id="@+id/addressLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/orangeBorder"/>
        <TextView
            android:id="@+id/address1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addressLabel"
            android:layout_alignLeft="@+id/addressLabel"
            android:text="Lorem ipsum dolor sit amet,"
            android:textStyle="italic"
            android:textSize="16dp"
            android:textColor="#fff"
            />
        <TextView
            android:id="@+id/address2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/address1"
            android:layout_alignLeft="@+id/address1"
            android:text="consectetur"
            android:textStyle="italic"
            android:textSize="16dp"
            android:textColor="#fff"
        />
        <TextView
            android:id="@+id/phoneLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/address2"
            android:layout_alignLeft="@+id/address2"
            android:layout_marginTop="16dp"
            android:text="Phone:  "
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/phoneLabel"
            android:layout_alignBaseline="@+id/phoneLabel"
            android:layout_marginTop="16dp"
            android:text="+44 12 3456 789"
            android:textStyle="italic"
            android:textSize="16dp"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/emailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phoneLabel"
            android:layout_alignLeft="@+id/phoneLabel"
            android:text="Email:  "
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/emailLabel"
            android:layout_alignBaseline="@id/emailLabel"
            android:layout_marginTop="16dp"
            android:text="Yourname@gmail.com"
            android:textStyle="italic"
            android:textSize="16dp"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailLabel"
            android:layout_alignLeft="@+id/emailLabel"
            android:text="www.yourwebsite.com"
            android:textStyle="italic"
            android:textSize="16dp"
            android:textColor="#fff"/>

        <ImageView
            android:id="@+id/circleG"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/circle" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="23dp"
            android:src="@drawable/google"
            android:layout_alignLeft="@id/circleG"
            android:layout_alignBottom="@id/circleG"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"/>


        <ImageView
            android:id="@+id/circleT"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/circleG"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/circle" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="23dp"
            android:src="@drawable/twitter"
            android:layout_alignLeft="@id/circleT"
            android:layout_alignBottom="@id/circleT"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/circleF"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/circleT"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/circle" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="23dp"
            android:src="@drawable/facebook"
            android:layout_alignLeft="@id/circleF"
            android:layout_alignBottom="@id/circleF"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

</LinearLayout>
